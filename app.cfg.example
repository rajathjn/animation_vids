# Example app.cfg file
# Place this file in the same directory as your Python script
# The AnimationConfig will automatically detect and load it

[animation]
# Customize any parameters you want to override
DOT_COLOR = PURPLE
DOT_RADIUS = 0.25
DAMPING = 0.95

# Enable trail
ENABLE_TRAIL = true
TRAIL_COLOR = YELLOW
TRAIL_WIDTH = 2.0

# Adjust physics
GRAVITY_Y = -12.0
INITIAL_VELOCITY_X = -3.0
INITIAL_VELOCITY_Y = -7.0

# Enable debug output
DEBUG = false
